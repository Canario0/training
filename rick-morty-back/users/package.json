{
  "name": "users",
  "version": "1.0.0",
  "description": "My Moleculer-based microservices project",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --config src/moleculer.config.ts src/services/**/*.service.ts",
    "start": "moleculer-runner --config dist/moleculer.config.js",
    "cli": "moleculer connect ",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint --ext .js,.ts .",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "jest": "^27.0.0",
    "ts-jest": "^27.1.4",
    "jest-cli": "^25.1.0",
    "moleculer-repl": "^0.6.2",
    "ts-node": "10.7.0",
    "ttypescript": "^1.5.13"
  },
  "dependencies": {
    "@types/jest": "^27.4.1",
    "@types/mkdirp": "^1.0.0",
    "@types/node": "^13.9.8",
    "bcrypt": "^5.0.1",
    "http-status-codes": "^2.2.0",
    "jest-ts-auto-mock": "^2.1.0",
    "moleculer": "^0.14.0",
    "moleculer-db": "^0.8.4",
    "moleculer-db-adapter-mongo": "^0.4.7",
    "moleculer-web": "^0.9.0",
    "node-dependency-injection": "^3.0.0-alpha.3",
    "reflect-metadata": "^0.1.13",
    "ts-auto-mock": "^3.6.2",
    "typeorm": "^0.3.6",
    "typescript": "4.5.3"
  },
  "engines": {
    "node": ">= 10.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "setupFiles": [
      "<rootDir>/jest-ts-mock-config.ts"
    ],
    "globals": {
      "ts-jest": {
        "compiler": "ttypescript",
        "tsConfig": "tsconfig.test.json"
      }
    }
  }
}
